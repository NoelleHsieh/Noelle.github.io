// Categories

.category-list
  list-unstyled()
  margin-right -.5rem
  margin-left -.5rem
  > .category-list-item
    display inline-block
    padding .5rem 1rem
    &:before
      content "\f18c"
      font-family feathericon
      margin-right .5rem

.category-list-item
    display inline-block
    padding .5rem 1rem
    &:before
      content "\f18c"
      font-family feathericon
      margin-right .5rem

.category-list-count
  display inline-block
  padding .1rem .5rem
  &:before
    content "("
    padding 0rem .1rem
  &:after
    content ")"
    padding 0rem .1rem

.archive-post-date
  margin-right .5rem
  margin-left .5rem
  color rgb(133, 133, 133)

.archive-posts
  margin-top .8rem
  margin-bottom 0

.main-content-wrap
  margin-bottom 5rem