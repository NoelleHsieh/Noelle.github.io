.navbar
  position relative
  padding-top 3rem
  text-align center
  .nav
    list-unstyled()
    .nav-item-link
      display block
      padding 1rem;
      color sea-dark
      text-decoration none
      cursor pointer
      &:hover
        color link-hover-color
    &.nav-main
      .nav-item-link
        &::before, i.twicon-lg
          display block
          line-height 1
        &::before
          font-size 4rem
          font-family 'twicon'
      .nav-item
        .nav-item-search
          &::before
              content '\a04c'
        &:nth-child(1)         // home
          .nav-item-link
            &::before
              content '\a002'
